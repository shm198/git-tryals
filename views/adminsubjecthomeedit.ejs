<% include partials/adminheader.ejs %>
    <div class="container mb-5">
            <h1 class="formheading">EDIT SUBJECT<i class="fa fa-edit"></i></h1>
            <form action="/adminsubjecthomeedit/<%= returnedsubject._id %>?_method=PUT" method="POST">
                <div class="container mb-4">
                    <% returnedsubjectcats.forEach(function(catitem) {%>
                        <hr>
                        <div class="container bg-info text-white">
                            <h2><%= catitem.subjectcatname %> </h2>
                            <small><%= catitem.subjectcatdetail %></small>
                        </div>
                        <hr>
                        <div class="container">
                                <% returnedsubjectfields.forEach(function(fielditem){ 
                                    if (fielditem.subjectcatname == catitem.subjectcatname ) { %>
                                        <% if (fielditem.fieldinputtype === "Text Box") { %>
                                            <div class="row">
                                                <div class="col-md-3 col-lg-3">
                                                    <h6><%= fielditem.fieldname %>: </h6> 
                                                </div> 
                                                <div class="col-md-3 col-lg-6">
                                                    <input class="admstudyinput" type="text" name="returnedsubject[<%= fielditem.fieldname %>]" value="<%= returnedsubject[fielditem.fieldname] %>">
                                                </div>
                                            </div>
                                            <hr>
                                        <% } %>
                                        <% if (fielditem.fieldinputtype === "Text Area") { %>
                                            <div class="row">
                                                <div class="col-md-3 col-lg-3">
                                                    <h6><%= fielditem.fieldname %>: </h6> 
                                                </div> 
                                                <div class="col-md-3 col-lg-6">
                                                    <textarea id="returnedsubject[<%= fielditem.fieldname %>]" class="text" cols="55" rows ="8" name="returnedsite[<%= fielditem.fieldname %>]"><%= returnedsite[fielditem.fieldname] %></textarea>
                                                </div>
                                            </div>
                                            <hr>
                                        <% } %>
                                        <% if (fielditem.fieldinputtype === "Checkbox") { %>
                                             <div class="row">
                                                <div class="col-md-3 col-lg-3">
                                                    <h6><%= fielditem.fieldname %>: </h6> 
                                                </div> 
                                                <div class="col-md-3 col-lg-6">
                                                <% fielditem.checkboxvalues.forEach(function(chkitem) {%>
                                                    <input type="checkbox" id="returnedsite[<%= fielditem.fieldname %>]" name="returnedsite[<%= fielditem.fieldname %>]" value="<%= chkitem %>">
                                                    <label for="returnedsite[<%= fielditem.fieldname %>]"><%= chkitem %></label>
                                                <% }); %>
                                                <span class="sgl-space text-danger"><i>[NOTE: If you want this changed, select the new value/s]</i></span>
                                                </div>
                                            </div>
                                            <hr>
                                        <% } %>
                                        <% if (fielditem.fieldinputtype === "Radio") { %>
                                            <div class="row">
                                               <div class="col-md-3 col-lg-3">
                                                   <h6><%= fielditem.fieldname %>: </h6> 
                                               </div> 
                                               <div class="col-md-3 col-lg-6">
                                               <% fielditem.radiovalues.forEach(function(radioitem) {%>
                                                   <input type="radio" id="returnedsite[<%= fielditem.fieldname %>]" name="returnedsite[<%= fielditem.fieldname %>]" value="<%= radioitem %>">
                                                   <label for="returnedsite[<%= fielditem.fieldname %>]"><%= radioitem %></label>
                                               <% }); %>
                                               <span class="sgl-space text-danger"><i>[NOTE: If you want this changed, select the new value/s]</i></span>
                                               </div>
                                           </div>
                                           <hr>
                                       <% } %>
                                       <% if (fielditem.fieldinputtype === "Checkbox with Other") { %>
                                            <div class="row">
                                                <div class="col-md-3 col-lg-3">
                                                    <h6><%= fielditem.fieldname %>: </h6> 
                                                </div> 
                                                <div class="col-md-3 col-lg-6">
                                                <% fielditem.checkboxvalues.forEach(function(chkitem) {%>
                                                    <input type="radio" id="returnedsite[<%= fielditem.fieldname %>]" name="returnedsite[<%= fielditem.fieldname %>]" value="<%= chkitem %>">
                                                    <label for="returnedsite[<%= fielditem.fieldname %>]"><%= chkitem %></label>
                                                <% }); %>
                                                    <input type="checkbox" id="returnedsite[<%= fielditem.fieldname %>]" name="returnedsite[<%= fielditem.fieldname %>]" value="Other" id="checkboxother">
                                                    <label for="checkboxother">Other</label>
                                                    <input class="admstudyinput" type="text" name="returnedsite[<%= fielditem.fieldname %>]" placeholder="checkboxother" id="chkothertext">
                                                </div>
                                                <span class="sgl-space text-danger"><i>[NOTE: If you want this changed, select the new value/s]</i></span>
                                            </div>
                                            <hr>
                                        <% } %>
                                    <% } %>
                                <% }); %>
                        </div>
                     <% });%>
                </div>
                <button class="btn btn-lg btn-block btn-dark" type="submit">SAVE</button>
            </form>
            
    </div>

<% include partials/adminfooter.ejs %>